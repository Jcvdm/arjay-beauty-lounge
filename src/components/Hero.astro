---
// Modern Hero section for ARJAY Beauty Lounge with Background Slideshow
import ResponsiveImage from './ResponsiveImage.astro';
import heroImage1 from '../assets/hero/beauty-bg-1.jpg';
import heroImage2 from '../assets/hero/beauty-bg-2.jpg';
import heroImage3 from '../assets/hero/beauty-bg-3.jpg';
---

<section id="home" class="relative min-h-screen flex items-center overflow-hidden snap-start">
  <!-- Fixed Background Slideshow -->
  <div class="fixed inset-0 z-0">
    <div class="slideshow-container">
      <!-- Slide 1 -->
      <div class="slide active">
        <ResponsiveImage 
          src={heroImage1}
          alt="ARJAY Beauty Lounge - Professional Beauty Services"
          priority={true}
          sizes="100vw"
          quality={85}
          class="w-full h-full object-cover fixed-bg"
        />
      </div>
      <!-- Slide 2 -->
      <div class="slide">
        <ResponsiveImage 
          src={heroImage2}
          alt="ARJAY Beauty Lounge - Luxury Treatments"
          priority={false}
          sizes="100vw"
          quality={85}
          class="w-full h-full object-cover fixed-bg"
        />
      </div>
      <!-- Slide 3 -->
      <div class="slide">
        <ResponsiveImage 
          src={heroImage3}
          alt="ARJAY Beauty Lounge - Expert Care"
          priority={false}
          sizes="100vw"
          quality={85}
          class="w-full h-full object-cover fixed-bg"
        />
      </div>
    </div>
    <!-- SUBTLE OVERLAY for better text readability -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/10 to-black/30"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
    <div class="min-h-screen flex items-center justify-center py-20">
      <!-- Content -->
      <div class="text-center animate-on-scroll">
        <!-- Badge -->
        <div class="inline-flex items-center px-6 py-3 rounded-full bg-white/95 backdrop-blur-sm border border-white/20 text-primary-800 text-sm font-medium mb-8 shadow-lg">
          <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
          Premium Beauty Services
        </div>

        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-8 leading-tight drop-shadow-lg">
          Transform Your
          <span class="block bg-gradient-to-r from-primary-400 via-primary-500 to-primary-600 bg-clip-text text-transparent">
            Natural Beauty
          </span>
        </h1>

        <p class="text-xl md:text-2xl text-white/90 mb-12 max-w-3xl mx-auto leading-relaxed drop-shadow-md">
          Experience luxury beauty treatments in our serene sanctuary. Our expert team combines
          artistry with the finest products to reveal your most radiant self.
        </p>

        <!-- Contact Information -->
        <div class="bg-white/95 backdrop-blur-md rounded-3xl p-8 mb-12 border border-white/20 shadow-2xl max-w-lg mx-auto">
          <div class="flex items-center justify-center space-x-6">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div class="text-center">
              <p class="text-primary-700 mb-2 text-lg">Contact Riana</p>
              <a href="tel:0763709400" class="text-3xl font-bold text-primary-800 hover:text-primary-600 transition-colors block">
                076 370 9400
              </a>
              <p class="text-primary-600 mt-2">WhatsApp & Calls Welcome</p>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
          <a href="tel:0763709400" class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105 flex items-center justify-center group">
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>Call Now</span>
          </a>
          <button onclick="document.getElementById('services').scrollIntoView({behavior: 'auto'})" class="bg-white/95 hover:bg-white text-primary-800 border-2 border-white/20 hover:border-primary-400 px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105 flex items-center justify-center group backdrop-blur-sm">
            <span>View Services</span>
            <svg class="w-6 h-6 ml-3 group-hover:translate-y-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </button>
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  .slideshow-container {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 2s ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Fixed background effect */
  .fixed-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -10;
  }



  /* Hero section specific styling */
  #home {
    position: relative;
    z-index: 5;
  }

  /* Text styling for bright background */
  #home h1, #home p, #home span {
    /* No text shadows needed on bright background */
  }

  /* GLOBAL STYLING - Make ALL sections match Hero background */
  section:not(#home) {
    position: relative;
    z-index: 10;
  }

  /* Add subtle overlay to all sections except Hero itself */
  section:not(#home)::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.85);
    z-index: 1;
  }

  /* Ensure ALL content is above overlays */
  section:not(#home) > * {
    position: relative;
    z-index: 20;
  }

  /* Additional safety for nested content */
  section:not(#home) * {
    position: relative;
  }
</style>

<script>
  // Background slideshow functionality
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;

    function showNextSlide() {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % slides.length;
      slides[currentSlide].classList.add('active');
    }

    // Change slide every 6 seconds
    setInterval(showNextSlide, 6000);
  });
</script>
