---
// Real ARJAY Beauty Lounge Services - Clean & Minimalistic
const services = [
  {
    title: "Nails (Acrylic)",
    description: "Professional acrylic nail extensions and nail art for stunning, long-lasting results.",
    icon: "nail",
    features: ["Acrylic Extensions", "Nail Art Design", "French Manicure", "Nail Repair", "Cuticle Care"]
  },
  {
    title: "7in1 Hydrafacials (RF) & Skin Rejuvenation",
    description: "Advanced 7-in-1 hydrafacial treatment with radiofrequency for complete skin rejuvenation.",
    icon: "facial",
    features: ["Deep Cleansing", "Exfoliation", "Extraction", "Hydration", "RF Skin Tightening", "LED Light Therapy", "Antioxidant Protection"]
  },
  {
    title: "RF Laser Slimming",
    description: "Non-invasive radiofrequency laser treatment for body contouring and fat reduction.",
    icon: "slimming",
    features: ["Body Contouring", "Fat Reduction", "Skin Tightening", "Cellulite Treatment", "Non-Invasive"]
  },
  {
    title: "Laser (Diode) Hair Removal",
    description: "Permanent hair reduction using advanced diode laser technology for smooth, hair-free skin.",
    icon: "laser",
    features: ["Permanent Hair Reduction", "All Skin Types", "Pain-Free Treatment", "Fast Results", "FDA Approved"]
  },
  {
    title: "Laser Tattoo Removal",
    description: "Safe and effective laser tattoo removal using advanced technology for complete tattoo elimination.",
    icon: "tattoo",
    features: ["All Tattoo Colors", "Minimal Scarring", "Professional Grade", "Multiple Sessions", "Aftercare Support"]
  },
  {
    title: "Black Carbon/Diamond Facial",
    description: "Luxurious carbon laser facial treatment for deep pore cleansing and skin brightening.",
    icon: "diamond",
    features: ["Deep Pore Cleansing", "Skin Brightening", "Oil Control", "Blackhead Removal", "Instant Glow"]
  },
  {
    title: "Microneedling",
    description: "Advanced microneedling treatment to stimulate collagen production and improve skin texture.",
    icon: "microneedle",
    features: ["Collagen Stimulation", "Scar Reduction", "Fine Line Treatment", "Skin Texture Improvement", "Natural Healing"]
  }
];


---

<section id="services" class="py-20 snap-start min-h-screen flex flex-col justify-center">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-white/90 backdrop-blur-sm border border-cyan-200/60 text-primary-700 text-sm font-medium mb-8 shadow-lg">
        <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
        Professional Beauty Services
      </div>
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-800 mb-4">
        Our <span class="text-primary-600">Premium Services</span>
      </h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-12">
        Discover our comprehensive range of beauty services designed to enhance your natural beauty
        and leave you feeling confident and radiant.
      </p>
    </div>


    
    <!-- Compact Services Grid - Similar to About Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-cyan-200/50 hover:border-primary-300 group hover:bg-gradient-to-br hover:from-white hover:to-cyan-50/20">
          <div class="flex items-start">
            <!-- Service Icon -->
            <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mr-4 group-hover:bg-primary-200 transition-colors duration-300">
              {service.icon === "nail" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4z"/>
                </svg>
              )}
              {service.icon === "facial" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3a9 9 0 100 18 9 9 0 000-18z"/>
                </svg>
              )}
              {service.icon === "slimming" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {service.icon === "laser" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              )}
              {service.icon === "tattoo" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              )}
              {service.icon === "diamond" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9l-5.91 5.91L18 22l-6-3.27L6 22l1.91-7.09L2 9l6.91-.74L12 2z"/>
                </svg>
              )}
              {service.icon === "microneedle" && (
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              )}
            </div>

            <!-- Service Content -->
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900 mb-2 group-hover:text-primary-800 transition-colors">
                {service.title}
              </h3>
              <p class="text-sm text-gray-600 mb-3 leading-relaxed">
                {service.description}
              </p>
              
              <!-- Book Button -->
              <button class="text-primary-600 hover:text-primary-700 text-sm font-medium transition-colors inline-flex items-center" onclick="alert('Booking link will be available soon!')">
                Book Now 
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
