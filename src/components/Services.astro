---
// Real ARJAY Beauty Lounge Services - Clean & Minimalistic
const services = [
  {
    title: "Nails (Acrylic)",
    description: "Professional acrylic nail extensions and nail art for stunning, long-lasting results.",
    icon: "nail",
    features: ["Acrylic Extensions", "Nail Art Design", "French Manicure", "Nail Repair", "Cuticle Care"]
  },
  {
    title: "7in1 Hydrafacials (RF) & Skin Rejuvenation",
    description: "Advanced 7-in-1 hydrafacial treatment with radiofrequency for complete skin rejuvenation.",
    icon: "facial",
    features: ["Deep Cleansing", "Exfoliation", "Extraction", "Hydration", "RF Skin Tightening", "LED Light Therapy", "Antioxidant Protection"]
  },
  {
    title: "RF Laser Slimming",
    description: "Non-invasive radiofrequency laser treatment for body contouring and fat reduction.",
    icon: "slimming",
    features: ["Body Contouring", "Fat Reduction", "Skin Tightening", "Cellulite Treatment", "Non-Invasive"]
  },
  {
    title: "Laser (Diode) Hair Removal",
    description: "Permanent hair reduction using advanced diode laser technology for smooth, hair-free skin.",
    icon: "laser",
    features: ["Permanent Hair Reduction", "All Skin Types", "Pain-Free Treatment", "Fast Results", "FDA Approved"]
  },
  {
    title: "Laser Tattoo Removal",
    description: "Safe and effective laser tattoo removal using advanced technology for complete tattoo elimination.",
    icon: "tattoo",
    features: ["All Tattoo Colors", "Minimal Scarring", "Professional Grade", "Multiple Sessions", "Aftercare Support"]
  },
  {
    title: "Black Carbon/Diamond Facial",
    description: "Luxurious carbon laser facial treatment for deep pore cleansing and skin brightening.",
    icon: "diamond",
    features: ["Deep Pore Cleansing", "Skin Brightening", "Oil Control", "Blackhead Removal", "Instant Glow"]
  },
  {
    title: "Microneedling",
    description: "Advanced microneedling treatment to stimulate collagen production and improve skin texture.",
    icon: "microneedle",
    features: ["Collagen Stimulation", "Scar Reduction", "Fine Line Treatment", "Skin Texture Improvement", "Natural Healing"]
  }
];


---

<section id="services" class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-white/90 backdrop-blur-sm border border-cyan-200/60 text-primary-700 text-sm font-medium mb-8 shadow-lg">
        <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
        Professional Beauty Services
      </div>
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-800 mb-4">
        Our <span class="text-primary-600">Premium Services</span>
      </h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-12">
        Discover our comprehensive range of beauty services designed to enhance your natural beauty
        and leave you feeling confident and radiant.
      </p>
    </div>


    
    <!-- Clean Services List -->
    <div class="max-w-4xl mx-auto space-y-4">
      {services.map((service) => (
        <div class="bg-white/95 backdrop-blur-sm rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border border-gray-200/50 hover:border-primary-300 group">
          <div class="flex items-center p-6">
            <!-- Service Icon -->
            <div class="flex-shrink-0 w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mr-6 group-hover:bg-primary-200 transition-colors">
              {service.icon === "nail" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3V1m0 20v-2m5-9h7l-3 9h-4V3h4l3 9z"/>
                </svg>
              )}
              {service.icon === "facial" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3a9 9 0 100 18 9 9 0 000-18zm-3 7a1 1 0 112 0 1 1 0 01-2 0zm6 0a1 1 0 112 0 1 1 0 01-2 0zm-3 5c-1.5 0-2.5-1-2.5-2h5c0 1-1 2-2.5 2z"/>
                </svg>
              )}
              {service.icon === "slimming" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              )}
              {service.icon === "laser" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              )}
              {service.icon === "tattoo" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3V1m10 2a2 2 0 012 2v12a4 4 0 01-4 4"/>
                </svg>
              )}
              {service.icon === "diamond" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2l3.09 6.26L22 9l-5.91 5.91L18 22l-6-3.27L6 22l1.91-7.09L2 9l6.91-.74L12 2z"/>
                </svg>
              )}
              {service.icon === "microneedle" && (
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              )}
            </div>

            <!-- Service Content -->
            <div class="flex-1">
              <h3 class="text-xl font-serif font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                {service.title}
              </h3>
              <p class="text-gray-700 text-base leading-relaxed mb-3">
                {service.description}
              </p>
              
              <!-- Service Features -->
              <div class="flex flex-wrap gap-2">
                {service.features.map(feature => (
                  <span class="text-xs bg-primary-50 text-primary-700 px-3 py-1 rounded-full border border-primary-200">
                    {feature}
                  </span>
                ))}
              </div>
            </div>

            <!-- Book Now Button -->
            <div class="flex-shrink-0 ml-6">
              <button class="bg-primary-500 hover:bg-primary-600 text-white py-3 px-6 rounded-lg font-medium hover:shadow-lg transition-all duration-300" onclick="alert('Booking link will be available soon!')">
                Book Now
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
