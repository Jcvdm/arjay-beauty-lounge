---
// Real ARJAY Beauty Lounge Services with Enhanced Mobile UI
import ResponsiveImage from './ResponsiveImage.astro';
import servicesImage from '../assets/services/services-list.jpg';

const services = [
  {
    title: "Nails (Acrylic)",
    description: "Professional acrylic nail extensions and nail art for stunning, long-lasting results.",
    mobileDescription: "Expert nail extensions & custom art",
    image: servicesImage,
    icon: "nail",
    features: ["Acrylic Extensions", "Nail Art Design", "French Manicure", "Nail Repair", "Cuticle Care"],
    price: "From R250"
  },
  {
    title: "7in1 Hydrafacials (RF) & Skin Rejuvenation",
    description: "Advanced 7-in-1 hydrafacial treatment with radiofrequency for complete skin rejuvenation.",
    mobileDescription: "Advanced hydrafacial with RF technology",
    image: servicesImage,
    icon: "facial",
    features: ["Deep Cleansing", "Exfoliation", "Extraction", "Hydration", "RF Skin Tightening", "LED Light Therapy", "Antioxidant Protection"],
    price: "From R450"
  },
  {
    title: "RF Laser Slimming",
    description: "Non-invasive radiofrequency laser treatment for body contouring and fat reduction.",
    mobileDescription: "Non-invasive body contouring",
    image: servicesImage,
    icon: "slimming",
    features: ["Body Contouring", "Fat Reduction", "Skin Tightening", "Cellulite Treatment", "Non-Invasive"],
    price: "From R350"
  },
  {
    title: "Laser (Diode) Hair Removal",
    description: "Permanent hair reduction using advanced diode laser technology for smooth, hair-free skin.",
    mobileDescription: "Permanent hair removal technology",
    image: servicesImage,
    icon: "laser",
    features: ["Permanent Hair Reduction", "All Skin Types", "Pain-Free Treatment", "Fast Results", "FDA Approved"],
    price: "From R200"
  },
  {
    title: "Laser Tattoo Removal",
    description: "Safe and effective laser tattoo removal using advanced technology for complete tattoo elimination.",
    mobileDescription: "Professional tattoo removal",
    image: servicesImage,
    icon: "tattoo",
    features: ["All Tattoo Colors", "Minimal Scarring", "Professional Grade", "Multiple Sessions", "Aftercare Support"],
    price: "From R400"
  },
  {
    title: "Black Carbon/Diamond Facial",
    description: "Luxurious carbon laser facial treatment for deep pore cleansing and skin brightening.",
    mobileDescription: "Luxury diamond facial treatment",
    image: servicesImage,
    icon: "diamond",
    features: ["Deep Pore Cleansing", "Skin Brightening", "Oil Control", "Blackhead Removal", "Instant Glow"],
    price: "From R300"
  },
  {
    title: "Microneedling",
    description: "Advanced microneedling treatment to stimulate collagen production and improve skin texture.",
    mobileDescription: "Collagen-boosting treatment",
    image: servicesImage,
    icon: "microneedle",
    features: ["Collagen Stimulation", "Scar Reduction", "Fine Line Treatment", "Skin Texture Improvement", "Natural Healing"],
    price: "From R280"
  }
];


---

<section id="services" class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-white/90 backdrop-blur-sm border border-cyan-200/60 text-primary-700 text-sm font-medium mb-8 shadow-lg">
        <span class="w-2 h-2 bg-primary-500 rounded-full mr-2 animate-pulse"></span>
        Professional Beauty Services
      </div>
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-800 mb-4">
        Our <span class="text-primary-600">Premium Services</span>
      </h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-12">
        Discover our comprehensive range of beauty services designed to enhance your natural beauty
        and leave you feeling confident and radiant.
      </p>
    </div>


    
    <!-- Enhanced Service Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div class="mobile-service-card group cursor-pointer" 
             data-service={service.title.toLowerCase().replace(/\s+/g, '-')}>
          
          <!-- Service Image -->
          <div class="service-image-container mb-4">
            <ResponsiveImage
              src={service.image}
              alt={`${service.title} - ARJAY Beauty Lounge`}
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              quality={85}
              class="mobile-service-image group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent rounded-lg"></div>
          </div>

          <!-- Service Content -->
          <div class="service-content">
            <h3 class="mobile-service-title">{service.title}</h3>
            
            <!-- Mobile-optimized description -->
            <p class="mobile-service-description block md:hidden">
              {service.mobileDescription}
            </p>
            <p class="mobile-service-description hidden md:block">
              {service.description}
            </p>

            <!-- Service Features -->
            <div class="mobile-service-features mb-4">
              {service.features.slice(0, 3).map(feature => (
                <span class="mobile-service-feature">{feature}</span>
              ))}
              {service.features.length > 3 && (
                <span class="mobile-service-feature">+{service.features.length - 3} more</span>
              )}
            </div>

            <!-- Service Price -->
            {service.price && (
              <div class="service-price text-primary-300 font-semibold text-sm mb-3">
                {service.price}
              </div>
            )}

            <!-- CTA Button -->
            <button class="service-cta-button w-full bg-white/20 hover:bg-white/30 text-white text-sm font-medium py-2 px-4 rounded-lg transition-all duration-300 border border-white/30" onclick="alert('Booking link will be available soon!')">
              Learn More
            </button>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
