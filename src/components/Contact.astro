<script>
  // Enhanced Mobile Form Validation and UX
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[name="contact"]') as HTMLFormElement;
    const inputs = form?.querySelectorAll('input, textarea, select') as NodeListOf<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>;
    const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    const submitStatus = document.getElementById('submit-status') as HTMLElement;

    // Real-time validation
    inputs?.forEach(input => {
      input.addEventListener('blur', () => validateField(input));
      input.addEventListener('input', () => clearError(input));
    });

    function validateField(field: HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement): boolean {
      const value = field.value.trim();
      const errorElement = document.getElementById(`${field.name}-error`) as HTMLElement;
      let isValid = true;
      let errorMessage = '';

      // Required field validation
      if (field.hasAttribute('required') && !value) {
        isValid = false;
        const label = form?.querySelector(`label[for="${field.id}"]`)?.textContent?.replace(' *', '') || field.name;
        errorMessage = `${label} is required`;
      }

      // Email validation
      if (field.type === 'email' && value && !isValidEmail(value)) {
        isValid = false;
        errorMessage = 'Please enter a valid email address';
      }

      // Phone validation
      if (field.type === 'tel' && value && !isValidPhone(value)) {
        isValid = false;
        errorMessage = 'Please enter a valid phone number';
      }

      // Show/hide error
      if (!isValid) {
        field.classList.add('form-error');
        field.classList.remove('form-success');
        if (errorElement) {
          errorElement.classList.remove('hidden');
          errorElement.textContent = errorMessage;
        }
        field.setAttribute('aria-invalid', 'true');
      } else {
        field.classList.remove('form-error');
        field.classList.add('form-success');
        if (errorElement) {
          errorElement.classList.add('hidden');
        }
        field.setAttribute('aria-invalid', 'false');
      }

      return isValid;
    }

    function clearError(field: HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement): void {
      const errorElement = document.getElementById(`${field.name}-error`) as HTMLElement;

      if (field.value.trim()) {
        field.classList.remove('form-error');
        if (errorElement) {
          errorElement.classList.add('hidden');
        }
        field.setAttribute('aria-invalid', 'false');
      }
    }

    function isValidEmail(email: string): boolean {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    function isValidPhone(phone: string): boolean {
      return /^[\d\s\-\+\(\)]{10,}$/.test(phone);
    }

    // Form submission handling
    form?.addEventListener('submit', function(e) {
      e.preventDefault();

      // Validate all fields
      let isFormValid = true;
      inputs?.forEach(input => {
        if (!validateField(input)) {
          isFormValid = false;
        }
      });

      if (isFormValid) {
        // Show loading state
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.innerHTML = `
            <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <span>Sending...</span>
          `;
        }

        // Submit form (Netlify will handle this)
        const formData = new FormData(this);

        fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData as any).toString()
        })
        .then(() => {
          // Success
          if (submitStatus) {
            submitStatus.classList.remove('hidden');
            submitStatus.innerHTML = `
              <div class="bg-green-500/20 border border-green-400 rounded-lg p-4 text-green-100">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Thank you! Your message has been sent successfully. We'll get back to you soon!</span>
                </div>
              </div>
            `;
          }

          // Reset form
          this.reset();
          inputs?.forEach(input => {
            input.classList.remove('form-error', 'form-success');
            const errorElement = document.getElementById(`${input.name}-error`) as HTMLElement;
            if (errorElement) {
              errorElement.classList.add('hidden');
            }
          });
        })
        .catch(() => {
          // Error
          if (submitStatus) {
            submitStatus.classList.remove('hidden');
            submitStatus.innerHTML = `
              <div class="bg-red-500/20 border border-red-400 rounded-lg p-4 text-red-100">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Sorry, there was an error sending your message. Please try again or call us directly.</span>
                </div>
              </div>
            `;
          }
        })
        .finally(() => {
          // Reset button
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerHTML = `
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
              <span>✨ Send Message & Book Appointment</span>
            `;
          }
        });
      } else {
        // Focus first invalid field
        const firstError = form.querySelector('.form-error') as HTMLElement;
        firstError?.focus();

        // Show error message
        if (submitStatus) {
          submitStatus.classList.remove('hidden');
          submitStatus.innerHTML = `
            <div class="bg-red-500/20 border border-red-400 rounded-lg p-4 text-red-100">
              <div class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Please fix the errors above before submitting.</span>
              </div>
            </div>
          `;
        }
      }
    });

    // Auto-hide status messages after 5 seconds
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
          const target = mutation.target as HTMLElement;
          if (!target.classList.contains('hidden')) {
            setTimeout(() => {
              target.classList.add('hidden');
            }, 5000);
          }
        }
      });
    });

    if (submitStatus) {
      observer.observe(submitStatus, { attributes: true });
    }
  });
</script>
