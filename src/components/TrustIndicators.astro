---
// Trust Indicators component for ARJAY Beauty Lounge
---

<section class="bg-white/95 backdrop-blur-sm border-b border-primary-100 py-4">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto">
      <div class="text-center">
        <div class="w-12 h-12 bg-gradient-to-br from-primary-100 to-primary-200 rounded-xl flex items-center justify-center mx-auto mb-2 shadow-soft border border-primary-200">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-sm font-semibold text-gray-900 mb-1">Certified</h3>
        <p class="text-xs text-primary-600">Expert Professionals</p>
      </div>

      <div class="text-center">
        <div class="w-12 h-12 bg-gradient-to-br from-primary-200 to-primary-300 rounded-xl flex items-center justify-center mx-auto mb-2 shadow-soft border border-primary-300">
          <svg class="w-6 h-6 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-sm font-semibold text-gray-900 mb-1">Flexible</h3>
        <p class="text-xs text-primary-600">Convenient Hours</p>
      </div>

      <div class="text-center">
        <div class="w-12 h-12 bg-gradient-to-br from-primary-300 to-primary-400 rounded-xl flex items-center justify-center mx-auto mb-2 shadow-soft border border-primary-400">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
        <h3 class="text-sm font-semibold text-gray-900 mb-1">Premium</h3>
        <p class="text-xs text-primary-600">Luxury Products</p>
      </div>
    </div>
  </div>
</section>
